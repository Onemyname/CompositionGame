<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/easy_button"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="@string/easy"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="4dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/normal_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_bias="0.25"
        android:textAppearance="@style/boba_cups_text_style"
        android:background="@drawable/button_choose_background"
        app:backgroundTint="@color/forest_green"/>

    <Button
        android:id="@+id/normal_button"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:text="@string/normal"
        app:layout_constraintTop_toBottomOf="@+id/easy_button"
        app:layout_constraintBottom_toTopOf="@+id/hard_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_bias="0.50"
        android:textAppearance="@style/boba_cups_text_style"
        android:background="@drawable/button_choose_background"
        app:backgroundTint="@color/goldenrod"/>

    <Button
        android:id="@+id/hard_button"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:text="@string/hard"
        app:layout_constraintTop_toBottomOf="@+id/normal_button"
        app:layout_constraintBottom_toTopOf="@+id/test_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_bias="0.75"
        android:textAppearance="@style/boba_cups_text_style"
        android:background="@drawable/button_choose_background"
        app:backgroundTint="@color/tomato"/>

    <Button

        android:id="@+id/test_button"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:text="@string/test"
        app:layout_constraintTop_toBottomOf="@+id/hard_button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_bias="1.0"
        android:textAppearance="@style/boba_cups_text_style"
        android:background="@drawable/button_choose_background"
        app:backgroundTint="@color/khaki"/>


</androidx.constraintlayout.widget.ConstraintLayout>