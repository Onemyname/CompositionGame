<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="choose_button_text_style_small_shadow">
        <item name="android:textSize">40sp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textStyle">bold</item>
        <item name="android:shadowColor">@color/grey</item>
        <item name="android:shadowDx">2</item>
        <item name="android:shadowDy">2</item>
        <item name="android:shadowRadius">2</item>
        <item name="fontFamily">@font/boba_cups_font</item>
    </style>
    <style name="choose_button_text_style">
        <item name="android:textSize">40sp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textStyle">bold</item>
        <item name="android:shadowColor">@color/grey</item>
        <item name="android:shadowDx">7</item>
        <item name="android:shadowDy">10</item>
        <item name="android:shadowRadius">12</item>
        <item name="fontFamily">@font/boba_cups_font</item>
    </style>

    <style name = "choose_button_bigger_text_style" parent="choose_button_text_style">
        <item name="android:textSize">80sp</item>
    </style>


    <style name="MyProgressBar" parent="Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:indeterminateOnly">false</item>
        <item name="android:progressDrawable">@drawable/progress_bar_drawable</item>
        <item name="android:minHeight">10dp</item>
        <item name="android:maxHeight">20dp</item>
    </style>

    <style name="OptionTextStyle">sss</style>

    <style name="QuestionTextStyle">sss</style>


</resources>